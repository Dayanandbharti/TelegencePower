<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Inbox_F"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="Inbox.Inbox_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bannerad">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/d_bottom_gray_line">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitStart"
                    android:id="@+id/back_btn"
                    android:tint="@color/black"
                    android:background="@color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inbox"
                    android:id="@+id/username"
                    android:textSize="16dp"

                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/topsection"
            android:background="@color/transparent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pic_bottom_bg"
                android:padding="2dp"
                android:id="@+id/Headerfirstpic"
                android:src="@drawable/round_profile_image_placeholder"
                ></ImageView>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/pic_bottom_bg"
                android:padding="2dp"
                android:id="@+id/Headersecondpic"
                android:layout_toRightOf="@+id/Headerfirstpic"
                android:src="@drawable/round_profile_image_placeholder"
                ></ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Headersecondpic">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Video Chat"
                    android:id="@+id/txt__videoChat"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                     />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt__videoChat">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/pic_bottom_bg"
                        android:id="@+id/onlineICon"
                        android:src="@drawable/active_green_buttion"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="5170 Online"
                        android:layout_toRightOf="@+id/onlineICon"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                         />

                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:scaleType="centerInside"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:id="@+id/img__match"
                android:layout_alignParentRight="true"
                android:src="@drawable/match"
                ></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/bellotop_section"
            android:layout_below="@id/topsection"
            android:background="@drawable/pink_bg">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pic_bottom_bg"
                android:padding="2dp"
                android:id="@+id/sencondRowIcon"
                android:src="@drawable/blue_user_icon"
                ></ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/sencondRowIcon">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stranger's Message"
                    android:id="@+id/txt__stranger_S_message"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Greetings from Strangers are stored here"
                    android:layout_below="@+id/txt__stranger_S_message"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                     />

                </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/right_arrow"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow_inbox" />

        </RelativeLayout>

        <com.chauthai.overscroll.RecyclerViewBouncy
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/inboxlist"
            android:layout_below="@+id/bellotop_section">

        </com.chauthai.overscroll.RecyclerViewBouncy>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/no_data_layout"
            android:layout_below="@+id/bellotop_section"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/img_no_job"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_whoops" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/img_no_job"
                android:layout_centerHorizontal="true"
                android:text="Whoops!"
                android:textColor="@color/dimgray"
                android:id="@+id/whoops"
                android:textSize="22sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/whoops"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/dimgray"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:text="There is no Chats you have so far"
                android:textSize="14sp"/>

        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/pbar"/>

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerad"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</FrameLayout>
