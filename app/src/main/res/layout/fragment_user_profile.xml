
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/background"
    android:fitsSystemWindows="true"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.Edit_Profile_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/d_bottom_gray_line">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitStart"
                    android:id="@+id/Goback"
                    android:tint="@color/black"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="15sp"

                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>





            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/d_round_white_background"
                android:backgroundTint="@color/transparent_60"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/d_round_gradient_background"
                    android:backgroundTint="@color/app_color"
                    android:translationZ="1dp"
                    android:layout_marginTop="20dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:src="@drawable/profile_image_placeholder" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Name"
                    android:textSize="24sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"


                    android:id="@+id/txtname1"
                    android:textColorHint="@color/black"
                    android:layout_toRightOf="@+id/profile_icon"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/transparent"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/d_round_white_background"
                android:backgroundTint="@color/transparent_60"
                android:padding="20dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:minHeight="50dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_profile_gray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:inputType=""
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_1234567890"
                        android:id="@+id/txtname2"
                        android:textColorHint="@color/gray_darkest"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:minHeight="50dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/phone_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:id="@+id/txtmob"
                        android:inputType=""
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_1234567890"
                        android:textColorHint="@color/gray_darkest"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:minHeight="50dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mail_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:id="@+id/txtmail"
                        android:inputType=""
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_1234567890"
                        android:textColorHint="@color/gray_darkest"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:minHeight="50dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/password_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:inputType=""
                        android:id="@+id/txtpassword"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_1234567890"
                        android:textColorHint="@color/gray_darkest"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingHorizontal="10dp"
                    android:minHeight="50dp" >

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/aadhar_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Aadhar Card Number"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/icon"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:inputType=""
                        android:maxLength="12"
                        android:id="@+id/txtaadharcardno"
                        android:digits="0123456789"
                        android:textColorHint="@color/graycolor"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                    <ImageView
                        android:id="@+id/Aadhar_image"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    android:background="@drawable/dot_line2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line2"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:visibility="gone"
                    android:minHeight="50dp" >

                    <ImageView
                        android:id="@+id/panicon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pancard_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="PAN Number"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/panicon"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:enabled="false"
                        android:inputType=""
                        android:maxLength="12"
                        android:id="@+id/txtpancardno"
                        android:digits="0123456789"
                        android:textColorHint="@color/graycolor"
                        android:textColor="@color/black"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/transparent"/>

                    <ImageView
                        android:id="@+id/pan_image"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    android:background="@drawable/dot_line2"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="50dp"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/d_round_white_background"
                android:backgroundTint="@color/app_color"
                android:paddingHorizontal="40dp"
                android:paddingVertical="5dp"
                android:layout_marginTop="30dp"
                android:id="@+id/edit_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>

        </LinearLayout>

        <Button
            android:id="@+id/btndeleteprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/redcolor"
            android:drawableStart="@android:drawable/ic_menu_delete"
            android:drawableTint="@color/white"
            android:drawableTintMode="multiply"
            android:text="Delete My Profile"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
             />

    </RelativeLayout>


</FrameLayout>
