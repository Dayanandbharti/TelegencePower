<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_round_white_background"
            android:layout_margin="20dp"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/bannerad">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top|left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/absent_bg"
                            android:layout_height="100dp"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/absent_icon"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Absent"
                                android:textColor="@color/black"

                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/txtphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                 />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/total_bg"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/total_daysicon"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Classes"
                                android:textColor="@color/black"

                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/txtemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="24sp"


                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:gravity="top|left"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Write to us"

                                android:layout_marginTop="40dp"
                                android:textColor="@color/black"

                                android:textSize="24sp"/>
                            <EditText
                                android:id="@+id/edt_name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:singleLine="true"
                                android:background="@drawable/d_less_round_gray_border"
                                android:hint="Your Name"
                                android:paddingHorizontal="10dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                />
                            <EditText
                                android:id="@+id/edt_phn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:digits="0123456789"
                                android:background="@drawable/d_less_round_gray_border"
                                android:hint="Your Phone No."
                                android:paddingHorizontal="10dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                />
                            <EditText
                                android:id="@+id/edt_mail"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/d_less_round_gray_border"
                                android:hint="Your Email ID"
                                android:paddingHorizontal="10dp"
                                android:layout_marginBottom="5dp"
                                android:singleLine="true"
                                android:gravity="center_vertical"
                                />
                            <EditText
                                android:id="@+id/edt_message"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@drawable/d_less_round_gray_border"
                                android:hint="Your Message"
                                android:lines="5"
                                android:minLines="5"
                                android:paddingHorizontal="10dp"
                                android:gravity="top"
                                />
                            <Button
                                android:id="@+id/btnsendquery"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginVertical="10dp"
                                android:backgroundTint="@color/app_color"
                                android:background="@drawable/d_less_round_black_background"
                                android:textColor="@color/app_sec_color"
                                android:text="Send Now"

                                android:textSize="18sp"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/no_data_layout"
                android:background="@drawable/d_round_white_background"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/img_no_job"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_whoops"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/img_no_job"
                    android:layout_centerHorizontal="true"
                    android:text="Whoops!"
                    android:textColor="@color/app_color"
                    android:id="@+id/whoops"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/whoops"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/app_color"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:text="There is no Help Article"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pbar"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>