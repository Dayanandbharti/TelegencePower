<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/mainlayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/round_profile_image_placeholder"
            android:id="@+id/user_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_image"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="18dp"
                    android:id="@+id/username"

                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/incoming"
        android:layout_width="wrap_content"
        android:background="@drawable/incoming_bubble"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:text="Your Message"
            android:textSize="15dp"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/image"
            android:text="Your Message"
            android:textSize="15dp"
            android:background="@color/graycolor"
            android:lineSpacingExtra="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetxt"
            android:textSize="10sp"

            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_below="@+id/view_"
            android:text="1 January"
            android:layout_gravity="left"
            android:layout_marginHorizontal="20sp"
            android:textColor="@color/dark_gray"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/outgoing"
        android:layout_width="wrap_content"
        android:background="@drawable/outgoing_bubble"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message1"
            android:text="Your Message"
            android:textSize="15dp"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/image1"

            android:text="Your Message"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:background="@color/graycolor"
            android:lineSpacingExtra="2dp"

            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetxt1"
            android:textSize="10sp"

            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_below="@+id/view"
            android:text="1 January"
            android:layout_gravity="right"
            android:layout_marginHorizontal="20sp"
            android:textColor="@color/dark_gray"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
</RelativeLayout>

